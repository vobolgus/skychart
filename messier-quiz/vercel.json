{
  "rewrites": [
    { "source": "/", "destination": "/src/pages/index.html" },
    { "source": "/game", "destination": "/src/pages/game.html" },
    { "source": "/src/(.*)", "destination": "/src/$1" },
    { "source": "/public/(.*)", "destination": "/public/$1" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=0, must-revalidate" }
      ]
    },
    {
      "source": "/public/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}